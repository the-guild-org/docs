{
  "name": "@theguild/remark-mermaid",
  "version": "0.2.0",
  "type": "module",
  "description": "Remark plugin for replacing ```mermaid code blocks with react `<Mermaid />` component",
  "repository": {
    "url": "https://github.com/the-guild-org/docs",
    "directory": "packages/remark-mermaid"
  },
  "author": "Dimitri POSTOLOV <dmytropostolov@gmail.com> (https://github.com/B2o5T)",
  "license": "MIT",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./*": {
      "types": "./dist/*.d.ts",
      "import": "./dist/*.js"
    }
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "types:check": "tsc --noEmit"
  },
  "peerDependencies": {
    "react": "^18.2.0"
  },
  "dependencies": {
    "mermaid": "^11.0.0",
    "unist-util-visit": "^5.0.0"
  },
  "devDependencies": {
    "@types/mdast": "4.0.4",
    "nextra": "4.0.7",
    "react": "18.3.1",
    "unified": "11.0.5"
  },
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false
}
